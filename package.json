{
  "name": "squad-desktop",
  "version": "1.0.0",
  "description": "Squad Desktop â€” AI Agent Monitoring & Control (PWA)",
  "type": "module",
  "scripts": {
    "start": "node server.js",
    "build:bundle": "esbuild server.js --bundle --platform=node --format=cjs --outfile=dist/server.cjs --target=node20 --external:webview-nodejs --external:libwebview-nodejs --external:bindings",
